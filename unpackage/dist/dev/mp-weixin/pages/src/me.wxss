
.content {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
.logo {
	border-radius: 10rem;
	height: 200rpx;
	width: 200rpx;
	margin-top: 40rpx;
	margin-left: auto;
	margin-right: auto;
	margin-bottom: 40rpx;
}
.text-area {
	display: flex;
	justify-content: center;
}
.title {
	font-size: 36rpx;
	color: black;
}
.xian {
	height: 1rpx;
	width: 100%;
	background-color: gray;
	margin-top: 30rpx;
	margin-bottom: 30rpx;
}
.icon {
	width: 50rpx;
	height: 50rpx;
}
.button {
	margin-left: 20%;
	margin-right: 20%;
}
.popup-info {
	color: #fff;
	background-color: #00a2a2;
}
.info-text {
	color: #909399;
}
.button-text {
